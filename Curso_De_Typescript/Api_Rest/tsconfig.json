{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,

    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "rootDir": "./src",
    "outDir": "./build",

    "paths": {
      "#settings/*": ["./settings/*"],
      "#functions/*": ["./functions/*"],
      "#services/*": ["./services/*"],
      "#controllers/*": ["./controllers/*"],
      "#schemas/*": ["./database/schemas/*"],
      "#database": ["./database/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
