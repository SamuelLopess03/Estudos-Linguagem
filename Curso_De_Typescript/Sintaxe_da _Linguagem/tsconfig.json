{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    "rootDir": "src",
    "outDir": "build",

    "paths": {
      "#mathfuncs/*": ["./src/functions/utils/math/*"],
      "#components": ["./src/components/utils/navbar/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
